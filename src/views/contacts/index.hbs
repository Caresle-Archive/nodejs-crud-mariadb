<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
			<div class="mt-4">
				{{#if edit}}
				<form action="/contacts/{{edit.id}}?_method=PUT" class="card" method="post">
					<h2 class="card-title text-center">Edit a contact</h2>
					<div class="card-body d-flex flex-column">
						<input type="text" class="form-control mb-4" name="contact_name" placeholder="Name" 
						value="{{edit.contact_name}}" />
						<input type="text" class="form-control mb-4" name="phone_number" placeholder="Phone Number" 
						value="{{edit.phone_number}}" maxlength="10"/>
						<button type="submit" class="btn btn-primary mb-4">Edit</button>
					</div>
				</form>
				{{else}}
				<form action="/contacts" class="card" method="post">
					<h2 class="card-title text-center">Add a contact</h2>
					<div class="card-body d-flex flex-column">
						<input type="text" class="form-control mb-4" name="contact_name" placeholder="Name" />
						<input type="text" class="form-control mb-4" name="phone_number" placeholder="Phone Number" maxlength="10"/>
						<button type="submit" class="btn btn-primary mb-4">Add</button>
					</div>
				</form>
				{{/if}}
			</div>
		</div>
		{{#if contacts}}
		<table class="col table table-primary table-striped table-hover mt-4">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Phone number</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
			{{#each contacts}}
				<tr>
					<th scope="row">{{this.id}}</th>
					<td>
						{{this.contact_name}}
					</td>
					<td>
						{{this.phone_number}}
					</td>
					<td class="d-flex">
						<form action="/contacts/{{this.id}}" method="get">
							<button type="submit" class="btn btn-secondary">
								Edit
							</button>
						</form>
						<form class="ms-4" action="contacts/{{this.id}}?_method=DELETE" method="post">
							<button type="submit" class="btn btn-danger">
								Delete
							</button>
						</form>
					</td>
				</tr>
			{{/each}}
			</tbody>
		</table>
		{{/if}}
	</div>
</div>